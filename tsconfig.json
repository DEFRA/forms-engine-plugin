{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["**/*.cjs", "**/*.js", "**/*.mjs", "**/*.ts"],
  "exclude": ["coverage", "node_modules", "public", ".server"]
}
