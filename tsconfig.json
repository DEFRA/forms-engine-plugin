{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"]
    },
    "types": ["@testing-library/jest-dom"]
  },
  "include": [
    "**/*.cjs",
    "**/*.js",
    "**/*.mjs",
    "**/*.ts",
    ".eslintrc.*",
    ".prettierrc.*",
    ".lintstagedrc.*"
  ],
  "exclude": ["coverage", "node_modules", ".public", ".server"]
}
