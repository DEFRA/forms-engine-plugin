{%- from "govuk/components/tag/macro.njk" import govukTag -%}

{%- switch env %}
  {% case "local" %}
  {% case "dev" %}
    {% set text = "Development" %}
    {% set classes = "govuk-tag--grey" %}
  {% case "test" %}
    {% set text = "Test" %}
    {% set classes = "govuk-tag--yellow" %}
  {% case "perf-test" %}
    {% set text = "Performance test" %}
    {% set classes = "govuk-tag--yellow" %}
  {% case "prod" %}
    {% set text = "Production" %}
    {% set classes = "govuk-tag--red" %}
  {% default %}
    {% set text = env | capitalize %}
    {% set classes = "govuk-tag--grey" %}
{% endswitch -%}

{{ govukTag({
  text: text,
  classes: classes
}) }}
